@model TipoCuentaViewModel

@{
    ViewData["Title"] = "Borrar tipo cuenta";
}

<h3 class="mb-3">¿Está seguro que desea borrar el tipo cuenta @Model.Nombre?</h3>

<form asp-controller="TiposCuentas" asp-action="BorrarTipoCuenta">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-controller="TiposCuentas" asp-action="Index">Cancelar</a>

</form>
