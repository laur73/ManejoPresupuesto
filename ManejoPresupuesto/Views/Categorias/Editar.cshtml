@*El modelo a utilizar para editar el CategoriaViewModel*@
@model CategoriaViewModel

@{
    ViewData["Title"] = "Editar Categoría";
}

@*Para ahorrarnos tiempo, reutilizaremos el formulario cread en la vista Crear
    Y lo adaptaremos a la vista Editar que es esta
*@

<h1>Editar Categoría</h1>
<h5>La categoría nos permite indicar en qué gastamos nuestro dinero, también de donde provienen nuestros ingresos</h5>

<form asp-controller="Categorias" asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    @*Para editar se usa el input hidden para el routeId*@
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()"
            class="form-select"></select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@*Sección de los Scripts*@

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
